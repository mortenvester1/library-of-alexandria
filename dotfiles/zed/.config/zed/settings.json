{
  "context_servers": {
    "taskmaster-ai": {
      "enabled": true,
      "command": "task-master-ai",
      "args": [],
      "env": {},
    },
  },
  "ssh_connections": [
    {
      "host": "jetson",
      "projects": [
        {
          "paths": ["/home/jetson/git/library-of-alexandria"],
        },
      ],
    },
  ],
  "language_models": {
    "openai_compatible": {
      "ollama (orin-nano)": {
        "api_url": "http://orin-nano.local:11434",
        "available_models": [
          {
            "name": "gemma3:1b",
            "max_tokens": 128000,
            "capabilities": {
              "tools": false,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "qwen3:1.7b",
            "max_tokens": 32768,
            "capabilities": {
              "tools": true,
              "images": false,
              // "supports_thinking": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "deepseek-r1:1.5b",
            "max_tokens": 32768,
            "capabilities": {
              "tools": true,
              "images": false,
              // "supports_thinking": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
    },
    "enabled_in_text_threads": false,
  },
  "theme": "Dracula",
  "base_keymap": "Atom",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "show_whitespaces": "all",
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "use_modifier_to_send": true,
    "expand_edit_card": true,
    "default_model": {
      "model": "claude-sonnet-4.5",
      "provider": "copilot_chat",
    },
    "inline_assistant_model": {
      "model": "mistralai/ministral-3-3b",
      "provider": "lmstudio",
    },
  },
  "tabs": {
    "file_icons": true,
    "close_position": "right",
  },
  "preferred_line_length": 120,
  "format_on_save": "on",
  "soft_wrap": "editor_width",
  "file_scan_exclusions": ["**/.git", ".DS_Store", ".ropeproject", ".ruff_cache", ".pytest_cache", "__pycache__"],
  "terminal": {
    "copy_on_select": true,
    "working_directory": "current_project_directory",
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "venv_name": ".venv",
      },
    },
  },
  "file_types": {
    "Shell Script": ["*bash", "*sh", "*zsh*", ".envrc"],
    "Dockerfile": ["Dockerfile*"],
    "Groovy": ["*Jenkinsfile*"],
    "JSON": ["*.json", "*.avro"],
  },
  "languages": {
    "JSON": {
      "tab_size": 2,
    },
    "HTML": {
      "tab_size": 2,
    },
    "Groovy": {
      "tab_size": 2,
    },
    "JSONC": {
      "tab_size": 2,
    },
    "XML": {
      "tab_size": 2,
    },
    "YAML": {
      "tab_size": 2,
    },
    "Shell Script": {
      "tab_size": 2,
      "hard_tabs": false,
    },
    "SQL": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "sql-formatter",
        },
      },
    },
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
  },
  "indent_guides": {
    "coloring": "indent_aware",
  },
  "auto_install_extensions": {
    "dockerfile": true,
    "dracula": true,
    "git-firefly": true,
    "groovy": true,
    "html": true,
    "ini": true,
    "java": true,
    "jq": true,
    "just": true,
    "just-js": true,
    "latex": true,
    "make": true,
    "mcp-server-context7": true,
    "rego": true,
    "ruff": true,
    "scala": true,
    "sql": true,
    "swift": true,
    "terraform": true,
    "toml": true,
    "xml": true,
  },
  "minimap": {
    "show": "always",
    "thumb": "always",
    "thumb_border": "left_open",
    "current_line_highlight": "all",
  },
  "notification_panel": { "button": false },
  "debugger": { "button": false },
  "collaboration_panel": { "button": false },
  "diagnostics": { "button": false },
}
