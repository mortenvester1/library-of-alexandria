{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["openai", "anthropic", "amazon-bedrock", "opencode"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1",
        "num_ctx": "65536"
      },
      "models": {
        "gpt-oss:20b": { "name": "gpt-oss:20b" },
        "qwen2.5-coder:3b": { "name": "qwen2.5-coder:3b" },
        "gemma3:4b": { "name": "gemma3:4b" },
        "gemma3:1b": { "name": "gemma3:1b" },
        "ministral-3:3b": { "name": "ministral-3:3b" },
        "qwen2.5-coder:7b": { "name": "qwen2.5-coder:7b" }
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1",
        "num_ctx": "65536"
      },
      "models": {
        "openai/gpt-oss:20b": { "name": "gpt-oss:20b" },
        "nvidia/nemotron-3-nano": { "name": "nemotron-3-nano" },
        "mistralai/devstral-small-2-2512": { "name": "devstral-small-2-2512" },
        "mistralai/ministral-3-3b": { "name": "ministral-3-3b" }
      }
    }
  },
  "model": "nvidia/nemotron-3-nano",
  "small_model": "mistralai/ministral-3-3b",
  "theme": "catppuccin",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "ls": "allow",
      "git status": "allow",
      "git diff": "allow"
    },
    "webfetch": "ask",
    "doom_loop": "ask"
  }
}
